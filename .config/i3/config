set $volChangeSignal 	1
set $term			 	st 
set $web 				qutebrowser

set $touchpadToggle 	~/scripts/toggle-touchpad.sh
#set $touchpadToggle 	"synclient TouchpadOff=$(synclient -l | grep -c 'TouchpadOff.*0')"

# Autostart on startup
exec --no-startup-id compton --backend glx --paint-on-overlay --vsync opengl-swc
exec --no-startup-id nm-applet
exec --no-startup-id synclient TouchpadOff=1
exec --no-startup-id sudo NetworkManager
exec_always --no-startup-id $HOME/.fehbg

exec setxkbmap -option caps:escape
set $mod Mod4

bindsym XF86AudioRaiseVolume 		exec --no-startup-id pactl set-sink-volume 0 +5% && pkill -RTMIN+$volChangeSignal i3blocks
bindsym XF86AudioLowerVolume 		exec --no-startup-id pactl set-sink-volume 0 -5% && pkill -RTMIN+$volChangeSignal i3blocks
bindsym XF86AudioMute 				exec --no-startup-id pactl set-sink-mute 0 toggle && pkill -RTMIN+$volChangeSignal i3blocks
bindsym XF86MonBrightnessDown		exec --nostartup-id xbacklight -dec 15
bindsym XF86MonBrightnessUp			exec --nostartup-id xbacklight -inc 15
bindsym XF86TouchpadToggle 			exec $touchpadToggle
bindsym $mod+F5			 			exec $touchpadToggle
bindsym $mod+F8			 		exec ~/bin/selectdisplay
bindsym XF86Display			 		exec ~/bin/selectdisplay # Key not registered
bindsym $mod+p			 		exec ~/bin/selectdisplay # https://bugs.launchpad.net/ubuntu/+source/linux/+bug/539477

font pango:monospace 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

bindsym $mod+Return exec $term 
bindsym $mod+F1 	exec $web

# kill focused window
bindsym $mod+q kill

# start dmenu (a program launcher)
